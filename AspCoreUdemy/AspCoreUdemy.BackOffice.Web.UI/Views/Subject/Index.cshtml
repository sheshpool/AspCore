@model IEnumerable<AspCoreUdemy.Core.Data.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";

    @using AspCoreUdemy.BackOffice.Web.UI.Controllers;

}

<script src="~/lib/jquery/dist/jquery.js"></script>

<h1>Subjects</h1>

<p>
    <button type="button" class="btn btn-light btn-sm">
        <a href='@Url.Action("Create")'>
            <i class="fas fa-plus" style=" font-size: 20px;     color: steelblue;"> Add</i>
        </a>
    </button>
</p>
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>@Html.DisplayNameFor(model => model.Exam)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exam.Titre)
            </td>
            <td class="float-right btn-group">
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Details", "Subject", new { id = item.Id })'>
                        <i class="fas fa-eye" style="font-size: 20px; color: seagreen;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Edit", "Subject", new { id = item.Id })'>
                        <i class="far fa-edit" style="font-size: 20px; color: steelblue;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Delete", "Subject", new { id = item.Id })'>
                        <i class="far fa-trash-alt" style="font-size: 20px; color: orangered;"></i>
                    </a>
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>           