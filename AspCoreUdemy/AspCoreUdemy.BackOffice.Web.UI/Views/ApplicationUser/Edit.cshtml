@model AspCoreUdemy.BackOffice.Web.UI.Models.UserRoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Edite</h1>

<h4>ApplicationRole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUser.Id" />
            <div class="form-group">
                <label asp-for="ApplicationUser.FirstName" class="control-label"></label>
                <input asp-for="ApplicationUser.FirstName" class="form-control" />
                <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.LastName" class="control-label"></label>
                <input asp-for="ApplicationUser.LastName" class="form-control" />
                <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.Email" class="control-label"></label>
                <input asp-for="ApplicationUser.Email" class="form-control" />
                <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Roles</label><br />
                @for (int i = 0; i< Model.ApplicationRolesCheckBox.Count; i++)
                {

                    <div class="form-check form-check-inline">
                        <input type="hidden" asp-for="@Model.ApplicationRolesCheckBox[i].ApplicationRole.Id" />
                        <input type="hidden" asp-for="@Model.ApplicationRolesCheckBox[i].ApplicationRole.Name" />
                        <input type="hidden" asp-for="@Model.ApplicationRolesCheckBox[i].ApplicationRole.RoleName" />
                        <input class="form-check-input" type="checkbox" asp-for="@Model.ApplicationRolesCheckBox[i].IsChecked" />
                        <label asp-for="@Model.ApplicationRolesCheckBox[i].IsChecked">@Model.ApplicationRolesCheckBox[i].ApplicationRole.RoleName</label>
                    </div>

                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
