@model IEnumerable<AspCoreUdemy.Core.Data.Models.ApplicationUserRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser.CreationDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.CreationDateTime)
            </td>
            <td class="float-right btn-group">
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Details", "ApplicationUser", new { id = item.UserId })'>
                        <i class="fas fa-eye" style="font-size: 20px; color: seagreen;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Edit", "ApplicationUser", new { id = item.UserId })'>
                        <i class="far fa-edit" style="font-size: 20px; color: steelblue;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Delete", "ApplicationUser", new { id = item.UserId })'>
                        <i class="far fa-trash-alt" style="font-size: 20px; color: orangered;"></i>
                    </a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
