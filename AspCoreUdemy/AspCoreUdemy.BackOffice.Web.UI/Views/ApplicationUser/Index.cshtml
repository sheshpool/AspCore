@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<p>
    <button type="button" class="btn btn-light btn-sm">
        <a href='@Url.Action("Create")'>
            <i class="fas fa-plus" style=" font-size: 20px;     color: steelblue;"> Add</i>
        </a>
    </button>
</p>

<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                Roles
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.Aggregate((i, j) => i + ", " + j))
            </td>
            <td class="float-right btn-group">
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Details", "ApplicationUser", new { id = item.ApplicationUser.Id })'>
                        <i class="fas fa-eye" style="font-size: 20px; color: seagreen;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Edit", "ApplicationUser", new { id = item.ApplicationUser.Id.ToString() })'>
                        <i class="far fa-edit" style="font-size: 20px; color: steelblue;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Delete", "ApplicationUser", new { id = item.ApplicationUser.Id })'>
                        <i class="far fa-trash-alt" style="font-size: 20px; color: orangered;"></i>
                    </a>
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>
