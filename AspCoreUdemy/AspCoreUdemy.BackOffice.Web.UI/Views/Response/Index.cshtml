@model IEnumerable<AspCoreUdemy.Core.Data.Models.Response>

@{
    ViewData["Title"] = "Responses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Responses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question.Subject.Exam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Subject.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Subject.Exam.Titre)
            </td>
            <td class="float-right btn-group">
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Details", "Response", new { id = item.Id })'>
                        <i class="fas fa-eye" style="font-size: 20px; color: seagreen;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Edit", "Response", new { id = item.Id })'>
                        <i class="far fa-edit" style="font-size: 20px; color: steelblue;"></i>
                    </a>
                </button>
                <button type="button" class="btn btn-sm btn-primary-outline">
                    <a href='@Url.Action("Delete", "Response", new { id = item.Id })'>
                        <i class="far fa-trash-alt" style="font-size: 20px; color: orangered;"></i>
                    </a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>