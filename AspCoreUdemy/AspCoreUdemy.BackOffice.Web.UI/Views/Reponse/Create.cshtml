@model AspCoreUdemy.Core.Data.Models.Reponse

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<AspCoreUdemy.Core.Data.Models.Question> questionList = null;
    questionList = this.ViewBag.QuestionList;
    var listItems = questionList.Select(item => new SelectListItem() { Text = item.Titre, Value = item.Id.ToString() }).ToList();
}

<h1>Create</h1>

<h4>Reponse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="QuestionId" asp-items="listItems" class="dropdown-item"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
